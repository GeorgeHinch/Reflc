                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1" Width="80" Height="40" CornerRadius="15" Background="#FF51BBCE">
                    <TextBlock x:Name="OBA_Stop1_StopNum" Text="10914" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" />
                </Grid>

                <StackPanel Orientation="Vertical" Grid.Column="2" VerticalAlignment="Center" Margin="25
                            ,0,0,0">
                    <TextBlock x:Name="OBA_Stop1_StopName" Text="E Jefferson St &amp; 15th Ave, W" FontSize="20" FontWeight="Bold" />
                    <TextBlock x:Name="OBA_Stop1_Routes" Text="Routes: 1, 7, 14, 36, 106"/>
                </StackPanel>
