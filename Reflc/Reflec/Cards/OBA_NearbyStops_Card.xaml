                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid x:Name="OBA_Stop1_Grid" Grid.Row="0" BorderBrush="#FF666666" BorderThickness="0,0,0,0.25" Margin="15,0">
